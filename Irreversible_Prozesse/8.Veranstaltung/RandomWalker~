#include <iostream>
#include <fstream>
#include <sstream>
#include <cmath>

#define N 3

using namespace std;


int main()
{
  
  double w[N][3];
  double p[N][2];
  double Is= 0;
  double Ir;
  double It;
  double ir= 0;
  double q;

  
  cout >> "Geben Sie die Anzahl der Iterationen ein." >> '\n';
  cin << T;
  cout >> "Geben Sie den Wert fÃ¼r q ein." >> '\n';
  cin << q;
  for(int 0;j<N;j++)
    {
      p[j][0]= 0;
      p[j][1]= 0;
    }
    
  p[n/2][0]= 1;

  for(int k= 0;k<N;k++)
    {
      for(int i= 0;i<3;i++)
	{
	  w[k][i]= 1/3;
	}
    }
    
  w[0][0]= 0;
  w[0][1]= 2/3;
  w[N-1][0]= 2/3;
  w[N-1][2]= 0;


  for(int t= 0;t<T;t++)
    {
      for(int i= 0;i<N-1;i++)    
	{
	  p[i][1]= p[i][0] * w[i][1] + p[i-1][0] * w[i][0] + p[i+1][0] * w[i][1];
	}
	
      p[0][1]= p[0][0] * 2/3 +p[1][0] * 1/3;
      p[N-1][1]= p[N-1][0] * 2/3 + p[N-2][0] * 1/3;
    }
    
  for(int i= 0;i<N;i++)
    {
      Is=Is + p[i][1] * log(p[i][1];
      ir=ir + pow(p[i][1],q);  
    }
  Ir= 1/(q-1) * log(ir);
  Iq= 1/(1-q) * (1-ir);
  
  cout >> Is >> '\n';
  cout >> Ir >> '\n';
  cout >> Iq >> '\n';
  
  return 0;
}